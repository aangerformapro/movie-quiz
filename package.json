{
    "name": "movie-quiz",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "scripts": {
        "build": "run-p build:css rollup",
        "watch": "run-p -n watch:rollup watch:css serve",
        "watch:css": "watch \"npm run dev:css\" scss -d -wait=1",
        "watch:rollup": "rollup -c -w",
        "build:css": "run-s scss postcss",
        "dev:css": "run-s scss dev:postcss",
        "scss": "sass --embed-sources --load-path=node_modules scss:public/assets",
        "dev:postcss": "postcss public/assets/*.css --verbose --map -r",
        "postcss": "postcss public/assets/*.css --verbose --no-map -r --env production",
        "rollup": "rollup -c",
        "serve": "nodemon server"
    },
    "author": "Aymeric Anger",
    "license": "MIT",
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version",
            "last 1 ie version"
        ]
    },
    "private": true,
    "devDependencies": {
        "@babel/preset-env": "^7.21.4",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.3",
        "autoprefixer": "^10.4.14",
        "connect-livereload": "^0.6.1",
        "cssnano": "^6.0.0",
        "express": "^4.18.2",
        "livereload": "^0.9.3",
        "minimist": "^1.2.8",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^10.1.0",
        "postcss-combine-media-query": "^1.0.1",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^8.3.0",
        "rollup": "^3.18.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-svelte": "^7.1.5",
        "rollup-plugin-version-injector": "^1.3.3",
        "sass": "^1.59.2",
        "svelte-preprocess": "^5.0.4",
        "watch": "^1.0.2"
    },
    "dependencies": {
        "bootstrap": "^5.3.0",
        "hint.css": "^2.7.0",
        "string-similarity-js": "^2.1.4",
        "svelte": "^3.59.1",
        "svelte-navigator": "^3.2.2",
        "swiper": "^9.4.1",
        "typed.js": "^2.0.16"
    }
}
